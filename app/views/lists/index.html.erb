<p id="notice"><%= notice %></p>

<h1>Yapılacaklar Listem</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Yapılacaklar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <body>
    <% @lists.each do |list| %>
      <% if list.completed %>
        <tr class="table-success">
          <td class="striker"><%= list.description %></td>
          <td>
            <%= link_to 'Göster', list %>
            <%= link_to 'Düzenle', edit_list_path(list) %>
            <%= link_to 'Sil', list, method: :delete, data: { confirm: 'Emin misin?' } %>
          </td>
        </tr>
      <% else %>
        <tr>
          <td><%= list.description %></td>
          <td>
            <%= link_to 'Göster', list %>
            <%= link_to 'Düzenle', edit_list_path(list) %>
            <%= link_to 'Sil', list, method: :delete, data: { confirm: 'Emin misin?' } %> 
          </td>
        </tr>

      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Yapılacak ekle', new_list_path, class: 'btn btn-info' %>
