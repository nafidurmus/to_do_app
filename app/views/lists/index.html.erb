<table class="table table-bordered">
  <thead>
    <tr>
      <th>Yapılacaklar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <body>
    <% @lists.each do |list| %>
      <% if list.completed %>
        <tr class="table-success">
          <td class="striker"><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
          <td>
            <% link_to 'Göster', list %>
            <center><%= link_to 'Sil', list, method: :delete, data: { confirm: 'Emin misin?', class: 'btn btn-light' } %></center>
          </td>
        </tr>
      <% else %>
        <tr>
          <td><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
          <td>
            <% link_to 'Göster', list %>
            <center><%= link_to 'Sil', list, class: 'btn btn-light', method: :delete, data: { confirm: 'Emin misin?' } %></center>
          </td>
        </tr>

      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% link_to 'Yapılacak ekle', new_list_path, class: 'btn btn-success' %>
